#!/usr/bin/env bash


################################################################################
### Head: Note
##

## * https://github.com/samwhelp/skel-project-plan/blob/gh-pages/demo/sh/project/bin/install.sh

##
### Tail: Note
################################################################################


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Im / Fcitx
##

app_fcitx_start () {

	is_command_exist 'pkill' && pkill fcitx

	is_command_exist 'fcitx' && fcitx &

}

##
### Tail: Im / Fcitx
################################################################################


################################################################################
### Head: Network / nm-applet
##

app_nm_applet_start () {

	is_command_exist 'pkill' && pkill nm-applet

	is_command_exist 'nm-applet' && nm-applet &

}

##
### Tail: Network / nm-applet
################################################################################


################################################################################
### Head: Network / blueman-applet
##

app_blueman_applet_start () {

	is_command_exist 'pkill' && pkill blueman-applet

	is_command_exist 'blueman-applet' && blueman-applet &

}

##
### Tail: Network / blueman-applet
################################################################################


################################################################################
### Head: Network / nm-applet
##

app_mate_volume_control_status_icon_start () {

	is_command_exist 'pkill' && pkill mate-volume-control-status-icon

	is_command_exist 'mate-volume-control-status-icon' && mate-volume-control-status-icon &

}

##
### Tail: Network / nm-applet
################################################################################


################################################################################
### Head: Main
##

__main__ () {

	app_fcitx_start

	app_nm_applet_start

	app_blueman_applet_start

	app_mate_volume_control_status_icon_start

}

__main__

##
### Tail: Main
################################################################################
