#!/usr/bin/env bash


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Util / Wallpaper
##

util_wallpaper_init_remember_display_file () {
	mkdir -p "$THE_SYS_CACHE_DIR_PATH/wallpaper"
	touch "$THE_SYS_CACHE_DIR_PATH/wallpaper/display"
}

util_wallpaper_set_display_mode () {
	util_wallpaper_init_remember_display_file
	echo "$1" > "$THE_SYS_CACHE_DIR_PATH/wallpaper/display"
}

util_wallpaper_get_display_mode () {
	util_wallpaper_init_remember_display_file
	cat "$THE_SYS_CACHE_DIR_PATH/wallpaper/display"
}

##
### Tail: Util / Wallpaper
################################################################################

################################################################################
### Head: Model / Wallpaper
##

mod_wallpaper_default () {
	echo "mod_wallpaper_default"
	#echo "$@"

	#is_command_exist 'wallpaper-select-feh' && wallpaper-select-feh default

	is_command_exist 'wallpaper-select-feh' && wallpaper-select-feh set "$HOME/Pictures/Wallpaper/default.png"


}

mod_wallpaper_shuf () {
	#echo "mod_wallpaper_shuf"
	#echo "$@"

	cd "$HOME/Pictures/Wallpaper"
	is_command_exist 'wallpaper-select-feh' && wallpaper-select-feh shuf

}


##
### Tail: Model / Wallpaper
################################################################################


################################################################################
### Head: SubCmd
##

sub_run_help () {
	main_usage "$@"
}

sub_run_default () {
	mod_wallpaper_default "$@"
}

sub_run_shuf () {
	mod_wallpaper_shuf "$@"
}


##
### Tail: SubCmd
################################################################################


################################################################################
### Head: Util_SubCmd
##

sub_cmd_find_function_name () {
	echo "sub_run_$1"
}

##
### Tail: Util_SubCmd
################################################################################


################################################################################
### Head: Main
##

main_usage () {
	##local cmd_name="$0"
	local cmd_name="hlwm-wallpaper-ctrl"

cat << EOF
Usage:
	$ $cmd_name [action]

Example:

	$ $cmd_name
	$ $cmd_name help

	$ $cmd_name default

	$ $cmd_name shuf

Debug:
	$ export DEBUG_HLWM=true

EOF

}

main_check_args_size () {
	if [ $1 -le 0 ]; then
		shift
		main_run_default_sub_cmd "$@"
		exit 1
	fi
}

main_run_default_sub_cmd () {
	main_usage "$@"
}

main_run_sub_cmd () {

	local sub_cmd="$1"

	shift

	local function_name=$(sub_cmd_find_function_name "$sub_cmd")

	## if ! command -v $function_name > /dev/null; then
	if ! type -p $function_name > /dev/null; then
		util_debug_echo "[Debug] sub_cmd_function_not_exist: sub_cmd=$sub_cmd; function_name=$function_name"

		echo

		main_run_default_sub_cmd "$@"

		return 1

	fi

	"$function_name" "$@" ## run sub cmd function


}

## Start
main_check_args_size $# "$@"

main_run_sub_cmd "$@"

##
### Tail: Main
################################################################################
