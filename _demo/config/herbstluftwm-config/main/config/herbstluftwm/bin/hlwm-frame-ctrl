#!/usr/bin/env bash


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Util / Frame
##

util_frame_init_remember_display_file () {
	mkdir -p "$THE_SYS_CACHE_DIR_PATH/frame"
	touch "$THE_SYS_CACHE_DIR_PATH/frame/display"
}

util_frame_set_display_mode () {
	util_frame_init_remember_display_file
	echo "$1" > "$THE_SYS_CACHE_DIR_PATH/frame/display"
}

util_frame_get_display_mode () {
	util_frame_init_remember_display_file
	cat "$THE_SYS_CACHE_DIR_PATH/frame/display"
}

##
### Tail: Util / Frame
################################################################################

################################################################################
### Head: Model / Frame
##

mod_frame_show () {
	#echo "mod_frame_show"
	#echo "$@"

	hc set frame_border_width 1
	hc set frame_transparent_width 5

	util_frame_set_display_mode 'show'
}

mod_frame_hide () {
	#echo "mod_frame_hide"
	#echo "$@"

	hc set frame_border_width 0
	hc set frame_transparent_width 0

	util_frame_set_display_mode 'hide'
}

mod_frame_toggle () {
	#echo "mod_frame_toggle"
	#echo "$@"

	local mode="$(util_frame_get_display_mode)"

	if [ "is_$mode" = "is_show" ]; then
		mod_frame_hide
		return
	fi

	mod_frame_show
}


##
### Tail: Model / Frame
################################################################################


################################################################################
### Head: SubCmd
##

sub_run_help () {
	main_usage "$@"
}

sub_run_show () {
	mod_frame_show "$@"
}

sub_run_hide () {
	mod_frame_hide "$@"
}

sub_run_toggle () {
	mod_frame_toggle "$@"
}


##
### Tail: SubCmd
################################################################################


################################################################################
### Head: Util_SubCmd
##

sub_cmd_find_function_name () {
	echo "sub_run_$1"
}

##
### Tail: Util_SubCmd
################################################################################


################################################################################
### Head: Main
##

main_usage () {
	##local cmd_name="$0"
	local cmd_name="hlwm-frame-ctrl"

cat << EOF
Usage:
	$ $cmd_name [action]

Example:

	$ $cmd_name
	$ $cmd_name help

	$ $cmd_name show
	$ $cmd_name hide

	$ $cmd_name toggle

Debug:
	$ export DEBUG_HLWM=true

EOF

}

main_check_args_size () {
	if [ $1 -le 0 ]; then
		shift
		main_run_default_sub_cmd "$@"
		exit 1
	fi
}

main_run_default_sub_cmd () {
	main_usage "$@"
}

main_run_sub_cmd () {

	local sub_cmd="$1"

	shift

	local function_name=$(sub_cmd_find_function_name "$sub_cmd")

	## if ! command -v $function_name > /dev/null; then
	if ! type -p $function_name > /dev/null; then
		util_debug_echo "[Debug] sub_cmd_function_not_exist: sub_cmd=$sub_cmd; function_name=$function_name"

		echo

		main_run_default_sub_cmd "$@"

		return 1

	fi

	"$function_name" "$@" ## run sub cmd function


}

## Start
main_check_args_size $# "$@"

main_run_sub_cmd "$@"

##
### Tail: Main
################################################################################
