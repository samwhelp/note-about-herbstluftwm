#!/usr/bin/env bash


################################################################################
### Head: Note
##

## * https://github.com/samwhelp/skel-project-plan/blob/gh-pages/demo/sh/project/bin/install.sh

##
### Tail: Note
################################################################################


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Main
##

__main__ () {

	#PATH="$HOME/.config/herbstluftwm/bin:$PATH"
	#echo $PATH > /tmp/log.txt

	is_command_exist 'hlwm-wallpaper' && hlwm-wallpaper &

	is_command_exist 'hlwm-compositor' && hlwm-compositor &

	is_command_exist 'hlwm-panel' && hlwm-panel &

	is_command_exist 'hlwm-applet' && hlwm-applet &

}

__main__

##
### Tail: Main
################################################################################
